# PeerBridge Production Environment Configuration

# Database Configuration
DB_HOST=your-database-host
DB_NAME=peerbridge
DB_USER=peerbridge_admin
DB_PASSWORD=your-secure-database-password
DB_PORT=5432

# Email Configuration - SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@peerbridge.ai
SUPPORT_EMAIL=support@peerbridge.ai
SENDGRID_FROM_NAME=PeerBridge

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_BASE_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/prod
CORS_ORIGIN=https://peerbridge.ai,https://www.peerbridge.ai,https://admin.peerbridge.ai

# S3 Configuration
S3_STATIC_BUCKET=production-peerbridge-static-website
S3_ADMIN_BUCKET=production-peerbridge-sales-admin
S3_UPLOADS_BUCKET=production-peerbridge-user-uploads
S3_REGION=us-east-1

# Lambda Configuration
LAMBDA_FUNCTION_NAME=production-peerbridge-api
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=256

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
SESSION_TIMEOUT=3600

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_USER_REGISTRATION=true
ENABLE_ADMIN_DASHBOARD=true
ENABLE_ANALYTICS=true
ENABLE_BACKGROUND_CHECKS=true
ENABLE_AFFILIATE_PROGRAM=true
ENABLE_INVESTMENT_TRACKING=true

# Third-party Integrations
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Rate Limiting
API_RATE_LIMIT=1000
API_BURST_LIMIT=2000
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring and Logging
CLOUDWATCH_LOG_GROUP=/aws/lambda/production-peerbridge-api
LOG_RETENTION_DAYS=30
ENABLE_XRAY=true

# Email Templates (SendGrid Dynamic Templates)
INVITATION_EMAIL_TEMPLATE_ID=d-your-sendgrid-template-id
WELCOME_EMAIL_TEMPLATE_ID=d-your-sendgrid-template-id
PASSWORD_RESET_EMAIL_TEMPLATE_ID=d-your-sendgrid-template-id

# Frontend URLs
FRONTEND_URL=https://peerbridge.ai
SALES_ADMIN_URL=https://admin.peerbridge.ai
USER_PORTAL_URL=https://app.peerbridge.ai

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-aws-account-id

# Database Connection Pool
DB_POOL_SIZE=5
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Cache Configuration
REDIS_URL=redis://your-redis-endpoint:6379
CACHE_TTL=3600

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/tmp/uploads
